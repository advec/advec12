//
// Swiper
// --------------------------------------------------
section.slider      
  .swiper-container
    .swiper-container__block
      .swiper-container__block__title
        h1 Somos Um
        
      .swiper-container__block__button
        a(href="/programacao/").btn.btn--white Novo por aqui?
        a(href="/programacao/").btn.btn--aovivo Assista ao vivo
      
    .swiper-wrapper
      .swiper-slide(style="background-image: url('assets/images/swipper/background__d.jpg')")
            
      .swiper-slide(style="background-image: url('assets/images/swipper/background__b.jpg')")
            
      .swiper-slide(style="background-image: url('assets/images/swipper/background__c.jpg')")
            
      .swiper-slide(style="background-image: url('assets/images/swipper/background__e.jpg')")

