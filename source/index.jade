  div.section__swipper__container
    div.swiper-container
      div.swiper-wrapper

        div.swiper-slide
          div.inner-wrap__block
            div.section__container__col__title
              h2(style="font-size: 8em") Somos Um.
            div.section__container__col__text
              p Somos Um em Cristo.
            //div.section__container__col__button
