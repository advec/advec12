//
// ==================================================

//
// 1. Colors
// --------------------------------------------------

// Grays
// --------------------------------------------------

$gray-darker  = rgba(#111, 1)
$gray-dark    = rgba(#333, .8)
$gray         = rgba(#666, .8)
$gray-light   = rgba(#aaa, .8)
$gray-lighter = rgba(#ddd, .8)
$gray-white   = rgba(#f0f0f0, .8)

// Pallets
// --------------------------------------------------

$white       = #ffffff
$yellow      = #eade00
$blue        = #0291A7
$blue-light  = #aceff9
$red         = #cc0000
$green       = rgb(0, 99, 88)

// Brands
// --------------------------------------------------

$text-color      = rgba(#000, .9)
$brand-primary   = $blue
$brand-success   = $green
$brand-info      = $blue
$brand-warning   = $red
$brand-danger    = $yellow


// Line & Radius
// --------------------------------------------------

$line = rgba($gray, .2)

//
// 2. Spaces
// --------------------------------------------------

$space         = 2rem                 // Regular space margin
$space-xs      = ($space / 4)         // Extra small space margin
$space-sm      = ($space / 2)         // Small space margin
$space-md      = ($space + $space-sm) // Medium space margin
$space-lg      = ($space * 2)         // Large space margin
$space-xlg     = ($space * 3)         // Extra Large space margin

$space-text    = 2.5rem

$space-gutter  = $space

$header-height = 7rem

//
// 4. Typography
// --------------------------------------------------

$doc-font-size        = 16

/* type scale */
$h1-size = 3.5em
$h2-size   = 2.8rem
$type-size-3   = 2.441em
$type-size-4   = 2em
$type-size-5   = 1em
$type-size-6   = .81em
$type-size-7   = 0.6875em
$type-size-8   = 0.625em

//
// 5. Others
// --------------------------------------------------

$buttom-radius = 100px
$widthContainer = 85%
