.fzp-dpt
  box-sizing border-box
  display flex
  flex-wrap wrap
  flex-direction row
  width 100%

  &__block
    box-sizing border-box
    position relative
    display flex
    justify-content center
    background-size cover !important
    background-position center center !important
    align-items center
    transition all 0.5s ease !important
    height 50vh
    width 100%
    +above('xs')
      height 38vh

    +above('sm')
      width 50%

    &:hover
      .fzp-dpt__block__overlay
        opacity .4

    &__overlay
      height 100%
      position absolute
      opacity 1
      width 100%
      transition opacity 0.5s ease !important
      z-index 2

      &--obreiro
        background #222222

      &--dinc
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(203,51,57,1) 100%)

      &--ensino
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(207,107,36,1) 100%)

      &--familia
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(73,101,75,1) 100%)

      &--interligados
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(69,50,34,1) 100%)

      &--interligadoskids
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(57,111,201,1) 100%)

      &--juventude
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(78,48,122,1) 100%)

      &--mulhervitoriosa
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(84,65,73,1) 100%)

      &--musica
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(154,101,61,1) 100%)

      &--obreiros
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(34,34,34,1) 100%)

      &--renovo
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(34,34,34,1) 100%)

      &--socioambiental
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(143,149,49,1) 100%)

      &--surdos
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(49,55,88,1) 100%)

    &__container
      width 85%
      +above('xlg')
        display flex
        align-items center

      &__infos
        display flex
        justify-content center
        align-items center
        flex-direction column
        position relative
        margin-bottom 1em
        width 100%
        z-index 3

        &__title
          h2
            color $white
            font-weight 500

        &__text
          text-align center
          p
            color $white

      &__button
        display flex
        justify-content center
        position relative
        width 100%
        z-index 3

.fzp-voluntario
    display none
    align-items center
    justify-content flex-end
    flex-direction column
    background white
    box-sizing border-box
    background-image url("/assets/images/back/section/voluntario__a.jpg")
    background-size cover
    background-position center center
    height 100vh
    position relative

    &__container
      display flex
      align-items flex-end
      justify-content space-between
      flex-direction column
      margin-bottom 5em
      width 85%

      &__block
        display flex
        justify-content flex-end
        flex-direction column
        position relative
        box-sizing border-box
        max-width 400px
        width 100%
        height 100%
        display block

        &__title
          color $white
          text-align right
          position relative
          z-index 2

          h1
            font-weight bold

        &__text
          color white
          text-align right
          position relative
          z-index 2

        &__registry
          color white
          text-align right
          position relative
          max-width 500px
          z-index 2

      &:after
        content ''
        background linear-gradient(180deg, rgba(0,0,0,0) 0%,#CB356B 50%,#BD3F32 100%)
        width 100%
        height 80%
        position absolute
        right 0
        bottom 0
        z-index 1
