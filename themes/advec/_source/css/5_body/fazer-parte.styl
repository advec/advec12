.fzp-dpt
  box-sizing border-box
  display flex
  flex-wrap wrap
  flex-direction row
  width 100%

  &__block
    box-sizing border-box
    position relative
    display flex
    justify-content center
    background-size cover !important
    background-position center center !important
    align-items center
    transition all 0.5s ease !important
    height 50vh
    width 100%
    +above('xs')
      height 38vh

    +above('sm')
      width 50%

    &:hover
      .fzp-dpt__block__overlay
        opacity .4

    &__overlay
      height 100%
      left 0
      position absolute
      opacity 1
      width 100%
      transition opacity 0.5s ease !important
      z-index 2

      &--obreiro
        background #222222

      &--dinc
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(203,51,57,1) 100%)

      &--ensino
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(207,107,36,1) 100%)

      &--familia
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(73,101,75,1) 100%)

      &--interligados
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(69,50,34,1) 100%)

      &--interligadoskids
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(57,111,201,1) 100%)

      &--juventude
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(78,48,122,1) 100%)

      &--mulhervitoriosa
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(84,65,73,1) 100%)

      &--musica
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(154,101,61,1) 100%)

      &--obreiros
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(34,34,34,1) 100%)

      &--renovo
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(34,34,34,1) 100%)

      &--socioambiental
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(143,149,49,1) 100%)

      &--surdos
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(49,55,88,1) 100%)

    &__container
      width 85%
      +above('xlg')
        display flex
        align-items center

      &__infos
        display flex
        justify-content center
        align-items center
        flex-direction column
        position relative
        margin-bottom 1em
        width 100%
        z-index 3

        &__title
          h2
            color $white
            font-weight 500

        &__text
          text-align center
          p
            color $white

      &__button
        display flex
        justify-content center
        position relative
        width 100%
        z-index 3

.fzp-page-header
  background $red
  display flex
  justify-content center
  align-items center
  padding-top 6.3em
  padding-bottom 3em
  position relative
  overflow visible
  width 100%

  &__name
    background $white
    bottom -2em
    padding 1em 2em
    position absolute
    z-index 9999
    box-shadow 0px 11px 52px -15px rgba(0,0,0,0.58)
    h3
      font-weight bold
      color $orange

  &__container
    display flex
    align-items center
    justify-content center
    flex-direction column
    width 85%

    &__title
      text-align center
      margin-bottom 1em

      h1
        color $white
        font-weight bold

      p
        color white
        margin-top 1em

    &__list
      display flex
      align-items center
      justify-content center
      flex-direction row
      flex-wrap wrap

      &__item
        display flex
        justify-content center
        align-items center
        opacity .6
        width 50px
        height 50px
        overflow hidden

        &.active
          font-size 1.4rem
          opacity 1

        &:hover
          font-size 1.4rem
          opacity 1

          a
            width 100%
            height 100%

        a
          display flex
          justify-content center
          align-items center
          color $white
