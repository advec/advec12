.btm-header
    display flex
    align-items center
    flex-direction column
    background white
    box-sizing border-box
    background url("/assets/images/back/section/batismo.png")
    background-size cover
    background-position center center
    position relative
    +above('sm')
        height 75vh
        flex(center, center, col)

    &__container
      width 85%
      +above('xs')
        display flex
        align-items center
        justify-content center
        max-width 600px

      &__block
        display flex
        justify-content center
        align-items center
        padding-top 6.5em
        padding-bottom 4em
        width 100%

        &__logo
          width 50%

          img
            width 100%

          +above('xs')
            text-align center

.btm-dates
  display flex
  background url("/assets/images/back/section/batismo__b.jpg")
  background-size cover
  background-position center center
  justify-content center
  height 60vh
  color $white
  width 100%

  &__container
    display flex
    justify-content center
    align-items center
    flex-direction column
    width 85%

    &__row
      display flex
      justify-content center
      height auto
      width 100%

      &:first-child
        margin-bottom 1em

      h3
        font-weight bold

      &__list
        display flex
        justify-content center

        &__item
          width auto
          margin-right 3em

          h3
            font-weight 300

          &:last-child
            margin-right 0

.btm-bar
  background linear-gradient(to left, #5C258D , #4389A2)
  display flex
  aligm-items center
  justify-content center
  padding-top 1.5em
  padding-bottom 1.5em

  &__container
    display flex
    justify-content center
    width 85%

    &__block
      width 100%
      +above('sm')
        justify-content center
      h4
        color white
        text-align center

.btm-faq
    background white
    height 86vh
    box-sizing border-box
    flex(center, center, col)
    position relative
    +above('sm')
        height 65vh
        flex(center, center, row)

    &__background
        height 40vh
        width 100%
        background url("/assets/images/back/section/batismo__a.png")
        background-size cover
        background-position center center
        +above('sm')
            height 100%

    &__block
        background linear-gradient(to left, #5C258D , #4389A2)
        flex(center, up, row)
        padding-top 3.6em
        height 60vh
        width 100%
        +above('sm')
            flex(center, center, row)
            height 100%
            padding-top 0

        &__container
            width 75%
            height auto
            position relative
            z-index 0
            +above('sm')
                width 60%

            &__col
                &__title
                    color white
