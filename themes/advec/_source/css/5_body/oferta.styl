//
// Page - Oferta
//
// ==================================================

.oferta-title
    background white
    box-sizing border-box
    background url("/assets/images/back/section/oferta.png")
    background-size cover
    background-position center center
    position relative
    overflow visible
    height 55vh
    +above('sm')
        flex(center, center, col)

    &__block
        flex(center, up, row)
        max-width 1000px
        padding-top 7em
        padding-bottom 4em
        width 100%
        +above('sm')
            flex(center, center, row)
            height 100%

        &__container
            width 85%
            height auto
            position relative
            z-index 0
            +above('sm')
                width 60%

            &__col
                &__title
                    margin-bottom 2em
                    color white

                    h1
                      font-weight bold

                    +above('sm')
                        text-align center

                &__text
                  color white
                  +above('sm')
                    text-align center

                  a
                    color white
                    font-size 1em
                    padding-top 4.5em

.oft-options
  display flex
  justify-content center
  align-items center
  width 90%
  height 50vh
  overflow visible
  position relative

  &__row
    display flex
    justify-content center
    flex-direction column
    left 0
    right 0
    top -8em
    position absolute
    +above('sm')
      flex-direction row

    &__item
      box-sizing border-box
      display flex
      justify-content center
      align-items center
      text-align center
      background $blue
      width 100%
      height 20vh
      position relative
      overflow hidden
      +above('sm')
        margin-bottom 0

      &:last-child
        margin-bottom 0

      &__background
        position absolute
        z-index 1
        opacity .8
        width 100%
        transition opacity .6s
        img
          width 100%

        +above('sm')
          display block

        &:hover
          opacity 1

      &__button
        position relative
        z-index 2
        width 100%
        max-width 300px

        a
          display block
          +above('sm')
            display inline-block
