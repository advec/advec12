//
// Page - Oferta
//
// ==================================================

.oferta-title
    background white
    box-sizing border-box
    background url("/assets/images/back/section/oferta.png")
    background-size cover
    background-position center center
    +above('sm')
        flex(center, center, col)

    &__block
        flex(center, up, row)
        max-width 1000px
        padding-top 7em
        padding-bottom 4em
        width 100%
        +above('sm')
            flex(center, center, row)
            height 100%

        &__container
            width 85%
            height auto
            position relative
            z-index 0
            +above('sm')
                width 60%

            &__col
                &__title
                    margin-bottom 2em
                    color white

                    h1
                      font-weight bold

                    +above('sm')
                        text-align center

                &__text
                  color white
                  margin-bottom 2em
                  +above('sm')
                    text-align center

                  a
                    color white
                    font-size 1em
                    padding-top 4.5em

                &__button
                  display flex
                  justify-content space-between
                  +above('sm')
                    justify-content center

                  a
                    max-width 150px
                    width 100%
                    &.btn--white
                      &:after
                        display none

                        +above('sm')
                          display inline-block

                    &.btn--blue-all
                      &:after
                        display none

                        +above('sm')
                          display inline-block

                    +above('sm')
                      max-width 600px
                      width auto
                      &:first-child
                        margin-right 1em

.oft-paragraph
  display flex
  align-items center
  justify-content center
  padding-bottom 2em
  padding-top 2em
  width 100%

  &__container
    max-width 1000px
    width 85%

    &__block
      text-align center
      width 100%
