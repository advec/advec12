.exp-header
    background white
    box-sizing border-box
    background url("/assets/images/back/section/expansao__b.jpg")
    background-size cover
    background-position center center
    display flex
    align-items center
    justify-content center
    flex-direction column
    height 80vh

    &__block
        flex(center, up, row)
        max-width 1000px
        width 100%
        +above('sm')
            flex(center, center, row)
            height 100%

        &__container
            width 85%
            height auto
            position relative
            z-index 0
            +above('sm')
                width 60%

            &__col
                &__title
                    margin-bottom 2em
                    color white

                    h1
                      font-weight bold

                    +above('sm')
                        text-align center

                &__text
                  color white
                  margin-bottom 2em
                  +above('sm')
                    text-align center

                  a
                    color white
                    font-size 1em
                    padding-top 4.5em

                &__button
                  display flex
                  justify-content space-between
                  +above('sm')
                    justify-content center

                  a
                    max-width 150px
                    width 100%
                    &.btn--white
                      &:after
                        display none

                        +above('sm')
                          display inline-block

                    &.btn--blue-all
                      &:after
                        display none

                        +above('sm')
                          display inline-block

                    +above('sm')
                      max-width 600px
                      width auto
                      &:first-child
                        margin-right 1em

.exp-full
  display flex
  background url("/assets/images/back/section/expansao__c.jpg")
  background-size cover
  background-position center center
  justify-content center
  height 60vh
  color $white
  width 100%

  &__container
    display flex
    align-items flex-start
    justify-content center
    flex-direction column
    width 85%

    &__row
      display flex
      justify-content flex-start
      height auto
      width 100%
      max-width 700px

      &:first-child
        margin-bottom 1em

      h2
        text-align left

      &__list
        display flex
        justify-content center

        &__item
          width auto
          margin-right 3em

          &:last-child
            margin-right 0

.exp-dblock
    background white
    height 86vh
    box-sizing border-box
    flex(center, center, col)
    position relative
    +above('sm')
        height 65vh
        flex(center, center, row)

    &__background
        height 40vh
        width 100%
        background url("/assets/images/back/section/expansao__b.jpg")
        background-size cover
        background-position center center
        +above('sm')
            height 100%

    &__block
        background $white
        flex(center, up, row)
        padding-top 3.6em
        height 60vh
        width 100%
        +above('sm')
            flex(center, center, row)
            height 100%
            padding-top 0

        &__container
            width 75%
            height auto
            position relative
            z-index 0
            +above('sm')
                width 60%

            &__col
                &__title
                    color $gray-dark
