.pgm-header
  background $red
  display flex
  justify-content center
  align-items center
  padding-top 6.3em
  padding-bottom 3em
  position relative
  overflow visible
  width 100%

  &__container
    display flex
    align-items center
    justify-content center
    flex-direction column
    width 85%

    &__title
      text-align center
      margin-bottom 1em

      h1
        color white
        font-weight bold

      p
        color white
        margin-top 1em

.pgm-list
    flex(center, center, row)
    width 100%
    padding-top 2em
    padding-bottom 2em
    overflow visible
    +above('sm')
        padding-bottom 2em
        padding-top 2em

    &__container
        text-align left
        max-width 1000px
        width 85%
        position relative
        display flex
        align-items flex-start
        justify-content center
        flex-direction column
        flex-wrap wrap

        &__block
            border-top 1px solid #efefef
            width 100%

            &__day
                padding-top 2em

                h3
                    font-weight bold

            &__event
                display flex
                flex-direction column
                flex-wrap wrap
                padding-bottom 2.4em
                +above('xs')
                    flex-direction row

                .infos
                    max-width 200px
                    padding-top 1.8em
                    +above('xs')
                        max-width 300px
                        padding-right 3em

                    .day
                        padding-right 1em
                        color $red

                    .event
                        display flex
                        flex-direction row
                        align-items center

                        .icon--aovivo
                            margin-left .4em

                    h4
                      font-size 1rem

            &:first-child
                padding-top none
                border-top none
