// Page - Historia
//
// ==================================================

.programacao-title
    background white
    box-sizing border-box
    padding-top 2em
    flex(center, center, col)
    position relative
    +above('sm')
        flex(center, center, col)

    &__block
        background white
        flex(center, up, row)
        max-width 800px
        width 100%
        +above('sm')
            flex(center, center, row)
            padding-top 4em
            height 100%

        &__container
            width 85%
            height auto
            position relative
            z-index 0
            +above('sm')
                width 60%
                
            &__col
                &__title
                    color $red
                    margin-bottom .2em
                    +above('sm')
                        text-align center

                &__text
                    +above('sm')
                        text-align center

                &__button
                    text-align left
                    +above('sm')
                        text-align center
    
.programacao-list
    flex(center, center, row)
    width 100%
    padding-top 2em
    padding-bottom 2em
    overflow visible
    +above('sm')
        padding-bottom 2em
        padding-top 2em

    &__container
        text-align left
        max-width 1000px
        width 85%
        position relative
        display flex
        align-items flex-start
        justify-content center
        flex-direction column
        flex-wrap wrap

        &__block
            border-top 1px solid #efefef
            width 100%

            &__day
                padding-top 2em

                h3
                    font-weight bold

            &__event
                display flex
                flex-direction column
                flex-wrap wrap
                padding-bottom 2.4em
                +above('xs')
                    flex-direction row

                .infos
                    max-width 200px
                    padding-top 1.8em
                    +above('xs')
                        max-width 300px
                        padding-right 3em

                    .day
                        padding-right 1em
                        color $red

                    .event
                        display flex
                        flex-direction row
                        align-items center

                        .icon--aovivo
                            margin-left .4em

            &:first-child
                padding-top none
                border-top none
