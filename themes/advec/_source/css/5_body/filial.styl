// Page - Filiais
//
// ==================================================

.filial-list
    background white
    height 100%
    box-sizing border-box
    flex(center, center, col)
    position relative
    +above('sm')
        height 65vh
        flex(center, center, row)

    &__background
        height 30vh
        width 100%
        background url("/assets/images/back/section/filial.png")
        background-size cover
        background-position center center
        position relative
        +above('sm')
            height 100%
            order 2

        h4
            position absolute
            right 10px
            bottom 10px
            color #fff

    &__block
        background white
        flex(center, up, row)
        padding-top 3.6em
        padding-bottom 3.6em
        height 100%
        width 100%
        +above('sm')
            padding-top 0
            flex(center, center, row)
            height 100%
            order 1

        &__container
            width 75%
            height auto
            position relative
            z-index 0
            +above('sm')
                width 60%
                
            &__col
                &__title
                    color $red
                    margin-bottom 2em

                &__text
                    margin-bottom 1em

                &__button
                    display flex
                    align-items flex-start
                    justify-content flex-start
                    flex-direction column

                    a
                        margin-top 1em

                    +above('sm')
                        text-align left

.filial-details
    flex(up, center, col)
    padding-bottom 2em
    min-height 40vh
    position relative
    overflow hidden

    +above('sm')
        padding-top 2em
        min-height 80vh

    &__container
        display flex
        flex-direction column
        width 85%

        &__return
            padding-top 1.8em
            padding-bottom 3em
            +above('lg')
                display none

        &__title
            padding-bottom 2em
            color $red

        &__list

            &__block
                padding-bottom 2em
                padding-top 2em

                &__end
                    padding-top .5em
                    padding-bottom .5em


                h3
                    font-weight bold
                    padding-bottom .5em

                p
                    line-height 16px

                &:first-child
                    border none
                    padding-top 0em

    &__menu
        display none
        position fixed
        right 0
        width 25%
        border-left 1px solid #efefef
        padding-left 2em
        background white

        +above('lg')
            display block

        &__container
            width 100%

            &__list
                display flex
                justify-content center
                align-items flex-start
                flex-direction column

                &__item
                    margin-bottom 1em

                    &:last-child
                        margin-bottom 0