//
// Page - Filiais
//
// ==================================================

.fll-nav
  background $orange
  display flex
  justify-content center
  align-items center
  padding-top 6.3em
  padding-bottom 3em
  position relative
  overflow visible
  width 100%

  &__name
    background $white
    bottom -2em
    padding 1em 2em
    position absolute
    z-index 9999
    box-shadow 0px 11px 52px -15px rgba(0,0,0,0.58)
    h3
      font-weight bold
      color $orange

  &__container
    display flex
    align-items center
    justify-content center
    flex-direction column
    width 85%

    &__title
      text-align center
      margin-bottom 1em

      h1
        color white
        font-weight bold

      p
        color white
        margin-top 1em

    &__list
      display flex
      align-items center
      justify-content center
      flex-direction row
      flex-wrap wrap

      &__item
        display flex
        justify-content center
        align-items center
        opacity .6
        width 50px
        height 50px
        overflow hidden

        &.active
          font-size 1.4rem
          opacity 1

        &:hover
          font-size 1.4rem
          opacity 1

          a
            width 100%
            height 100%

        a
          display flex
          justify-content center
          align-items center
          color $white

.filial-details
    flex(up, center, col)
    padding-top 5em
    padding-bottom 2.5em
    min-height 40vh

    +above('sm')
        padding-top 6em
        min-height 80vh

    &__container
        display flex
        flex-direction column
        max-width 1000px
        width 85%

        &__return
            padding-top 1.8em
            padding-bottom 3em
            +above('lg')
                display none

        &__title
            padding-bottom 2em
            color $red

        &__list

            &__block
                padding-bottom 2em
                padding-top 2em

                &__end
                    padding-top .5em
                    padding-bottom .5em


                h3
                    font-weight bold
                    padding-bottom .5em

                p
                    line-height 16px

                &:first-child
                    border none
                    padding-top 0em

    &__menu
        display none
        position fixed
        right 0
        width 25%
        border-left 1px solid #efefef
        padding-left 2em
        background white

        +above('lg')
            display block

        &__container
            width 100%

            &__list
                display flex
                justify-content center
                align-items flex-start
                flex-direction column

                &__item
                    margin-bottom 1em

                    &:last-child
                        margin-bottom 0
