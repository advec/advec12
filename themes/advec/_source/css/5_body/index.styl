//
// 1. Swipper
// -----------------------------------

.slider
  height 100vh !important
  color $white
  text-align left
  display flex
  overflow hidden

  .swiper-container
    width 100%
    height 100vh

    .swiper-slide
      flex(center, center, col)
      background-size cover
      background-repeat no-repeat
      background-position center center

    .swiper-block
      flex(center, left, col)
      width 85%
      height 100vh
      z-index 1
      +above('lg')
        width 65%

      &:after
        font-family FontAwesome
        content "\f107"
        font-size 1.5rem
        font-style normal
        font-weight normal
        text-decoration inherit
        position absolute
        bottom 3.6em
        color white

      &__title
        max-width 450px
        margin-bottom 1em

      &__text
        margin-bottom 2.5em

      &__video
        position absolute
        z-index -9999
        height 100vh
        overflow hidden
        top 0
        left 0
        right 0
        bottom 0

        video
          width auto
          min-width 100%
          min-height 100%

//
// 2. Section
// -----------------------------------

.bemvindo
  background white
  flex(center, center, row)
  padding-top 8em
  padding-bottom 8em

  &__container
    color $red
    max-width 511px
    text-align center
    width 75%

    &__text
      &:after
        display block
        font-family FontAwesome
        content "\f107"
        font-style normal
        font-weight 300
        font-size 2rem
        text-decoration inherit
        margin-top 2em
        color $red

.ebd
  height 100vh
  box-sizing border-box
  flex(center, center, col)
  position relative
  overflow visible
  +above('sm')
    height 65vh
    flex(center, center, row)

  &__background
    height 35%
    width 100%
    background url("/assets/images/back/section/ebd.png")
    background-size cover
    background-position center center
    +above('sm')
      height 100%
      order 2

  &__block
    background white
    flex(center, center, row)
    height 65%
    width 100%
    +above('sm')
      height 100%
      order 1

    &__container
      width 75%
      height auto
      position relative
      z-index 0
      +above('sm')
        width 60%

      &__col
        &__title
          color $red
          margin-bottom 2em

        &__text
          margin-bottom 1em

        &__button
          text-align left
          +above('sm')
            text-align left

