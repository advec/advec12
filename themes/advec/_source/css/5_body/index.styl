//
// Page Index
//
// 1. Swipper
// 2. Blocks
// 3. Bars
//
// ==================================================

.batismo
  background-image url('/assets/images/batizado.png')
  height 100vh
  +above('sm')
    height 60vh

.departamento
  background-image url('/assets/images/voluntario.png')
  height 100vh
  +above('sm')
    height 60vh

.oracao
  background-image none
  height 60vh !important

  &__container__col__title
  &__container__col__text
    color black !important

  +above('sm')
    height 40vh !important

.batismo
.departamento
.oracao
  display flex
  align-items center
  justify-content center
  color $white
  background-attachment fixed
  background-size cover
  background-position center center
  box-sizing border-box

  &__container
    display flex
    justify-content center
    width 85%
    max-width 500px

    &__col
      &__text
        margin-bottom 30px

      &__title
        padding-top 1.5em
        padding-bottom 1.5em

      &__title,
      &__text,
      &__button
        text-align center

.slider
  height 100vh !important
  color $white
  text-align center
  display flex
  overflow hidden

  &__container
    width 100%
    max-width 100%

    .swiper-container
      width 100%
      height 100vh

      .swiper-pagination-bullet-active
        background-color $white !important

      .swiper-button-prev
        left 0
      .swiper-button-next
        right 0
      .swiper-button-prev,
      .swiper-button-next
        justify-content center
        align-items center
        background-color rgba(0,0,0,1)
        opacity .4
        width 52px
        height 52px
        background-image none
        transition all .4s ease-in-out
        display none
        +above('sm')
          display flex


        &:hover
          opacity .8

      .swiper-slide
        display flex
        flex-flow column
        justify-content center
        align-items center
        background-size cover
        background-repeat no-repeat
        background-position center center

      .inner-wrap__block
        display flex
        justify-content center
        align-items center
        flex-flow column
        max-width 80%
        height 100vh
        z-index 1

        .block__title,
        .block__button
          padding-top 1.5em
          padding-bottom 1.5em

        .block__text
          width 70%

        .block_button
          .button__row
            justify-content center

            &:nth_child(1)
              margin-right 15px

        .section__video
          position absolute
          z-index -9999
          height 100vh
          overflow hidden
          top 0
          left 0
          right 0
          bottom 0

          video
            width auto
            min-width 100%
            min-height 100%
