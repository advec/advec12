  &__block
    background white
    flex(center, center, row)
    height 65%
    width 100%
    +above('sm')
      height 100%

    &__container
      width 75%
      height auto
      position relative
      z-index 0
      +above('sm')
        width 60%

      &__col
        &__title
          color $red
          margin-bottom 2em

        &__text
          margin-bottom 1em

        &__button
          text-align left
          +above('sm')
