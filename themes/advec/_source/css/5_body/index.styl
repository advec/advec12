.oracao
  background white
  box-sizing border-box
  flex(center, center, col)
  padding-bottom 5.3em
  +above('sm')
    flex(center, center, row)
    height 60vh
    padding-bottom 0

  &__container
    width 75%
    height auto
    position relative
    z-index 0

    &__col
      &__icon
      &__title
      &__text
      &__button
        text-align left
        +above('sm')
          text-align center

      &__title
        color $red
        margin-bottom 2em

      &__button
        padding-top 1em

.useful
  width 100%
  height 100%
  padding-bottom 4em
  flex(center, center, row)
  +above('xs')
    background url("/assets/images/back/section/useful.png")
    background-attachment fixed
    background-size cover
    background-position 82% center
    background-position center center
    padding-top 7.5em
    padding-bottom 7.5em

  &__container
    height 100%
    width 100%
    flex(center, center, row)

    &__row
      flex(center, center, col)
      width 70%
      +above('lg')
        flex(between, center, row)

      &__item
        text-align center
        max-width 240px
        padding-bottom 5em
        &:last-child
          padding-bottom 0

        +above('xs')
          padding-bottom 0


        h3
          margin-bottom .7em
          +above('xs')
            color white

        p
          margin-bottom 1.4em
          +above('xs')
            color white

        .btn
          +above('xs')
            color white
