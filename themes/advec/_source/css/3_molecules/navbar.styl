//
// Header
//
// ==================================================

.navbar
  transition 0.2s cubic-bezier(0.36, 0.66, 0.04, 1)
  background-image linear-gradient(to top, transparent 0%, rgba(0,0,0,.7) 100%)
  height 110px
  flex(center, center, row)
  width 100%
  top 0
  position absolute
  z-index 3

  &__container
    width 85%

    &__row
      flex(between, center, row)

      &__logo
        width 185px
        +below('xs')
          width 9rem

        .st0
          fill-rule evenodd
          clip-rule evenodd

        .st0
        .st1
        .st2
        .st3 
          fill #fff

      &__navbar
        align-items center

        &__items
          display flex
          justify-content center
          align-items center

          a
            &.aovivo
              display none
              +above('xs')
                display block

            &:last-child
              margin-left 10px

          ul
            display flex
            justify-content flex-end
            padding 0
            margin 0
            display none
            +above('xlg')
              display flex

            li
              text-align center
              margin-right 35px
              transition 0.3s all

              &:hover
                opacity 1 !important

              a
                color #fff
                font-size .9em
                padding-top 20px
                padding-bottom 20px
                font-weight 300

  &__white
    background-image none
    background-color $white

    ul
      li
        a
          color #000

    .btn
      &--active
        background #000
        color #fff !important

      &--white
        box-shadow 0px 0px 0px 2px #000 inset
        color #000

        &:hover
          background #000
          color #fff

    .st0
    .st1
    .st2
    .st3 
      fill #000 !important


/* menu hamburguer nav */

.megamenu
  display flex
  position fixed
  width 100%
  height 100%
  top 0
  color #ffffff !important
  background linear-gradient(to bottom,  rgba(0,0,0,0.95) 0%,rgba(0,0,0,.75) 100%)
  z-index: 2
  justify-content center
  transition all 1s cubic-bezier(0.7, -0.02, 0, 1)
  transform translateY(-40%)
  opacity 0
    
  +above('xlg')
    height 100%
    padding-bottom 5%

  &.appear
    opacity 1
    transform translateY(0%) !important

  &__container
    width $widthContainer

    &__block
      margin-top 130px
      position fixed
      overflow scroll
      width 85%
      height 73%
      +above('xlg')
        overflow hidden
        position relative
        width 100%

      &__list
        display flex
        justify-content space-between
        flex-direction column
        height 100%
        width 100%
        padding 0
        margin 0
        position absolute
        +above('sm')
          flex-direction row
          flex-wrap wrap

        +above('xlg')
          height auto
          flex-direction row
          position relative

        &__item
          margin-top 45px
          +above('sm')
            margin-right 50px
            margin-top 0

          +above('xlg')
            margin-right 0

          &:first-child
            margin-top 0px

          ul
            li
              margin-top 20px

              a
                &:after
                  font-family FontAwesome
                  content "\f105"
                  font-style normal
                  font-weight normal
                  text-decoration inherit
                  margin-left 7px
                  color red
                  margin-left 10px

  &__white
    background linear-gradient(to bottom,  rgba(255,255,255,255.1) 0%,rgba(255,255,255,.9) 100%)
    color #000 !important