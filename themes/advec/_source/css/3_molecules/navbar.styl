//
// Header
//
// ==================================================

.navbar
  transition 0.2s cubic-bezier(0.36, 0.66, 0.04, 1)
  background-image linear-gradient(rgba(0,0,0,.3),transparent)
  height 110px
  display flex
  flex-flow row
  justify-content center
  align-items center
  width 100%
  top 0
  position absolute
  z-index 3

  &__container
    container()

    &__col
      display flex
      align-items center
      flex-flow row
      justify-content space-between !important

      &__logo
        width 185px
        +below('xs')
          width 9rem

      &__navbar
        align-items center

        &__items
          display flex
          justify-content center
          align-items center

          a
            &.aovivo
              hidden(xs)

            &:last-child
              margin-left 10px

          ul
            display flex
            justify-content flex-end
            padding 0
            margin 0
            hidden('md')

            li
              text-align center
              margin-right 45px
              transition 0.3s all

              &:hover
                opacity 1 !important

              a
                color #fff
                font-size .9em
                padding-top 20px
                padding-bottom 20px
                font-weight 300

/* menu hamburguer nav */

.megamenu
  display none
  position fixed
  width 100%
  height 100%
  overflow-y scroll
  top 0
  color #ffffff !important
  background linear-gradient(to bottom, rgba(0, 0, 0, 1) 0%, rgba(0, 0, 0, 0.65) 100%)
  z-index: 2
  justify-content center
  opacity 0
  transition all 2.5s ease-in-out

  &.appear
    opacity 1 !important

  &__container
    width $widthContainer

    &__block
      margin-top 110px
      position relative
      overflow hidden
      overflow-y scroll
      height 73%

      &__list
          justify-content space-between
          flex-direction column
          height 100%
          width 100%
          padding 0
          margin 0
          position absolute

          &__item
            margin-top 45px

            &:first-child
              margin-top 0px

            ul
              li
                margin-top 20px