//
// Footer
//
// ==================================================

.footer
  width 100%
  height auto
  background $white
  flex(center, center, col)

  p
    font-size 1.5em
    letter-spacing -0.02em
    line-height normal

  span
    font-weight 300
    font-size .85em

  &__container
    width $widthContainer

    &__row
      width 100%
      margin-top 30px
      margin-bottom 30px
      box-sizing border-box
      flex(between, center, col)
      +above('sm')
        flex(between, center, row)

      &__social
        margin-top 30px
        display none
        +above('sm')
          display block

      &__icons
        flex(between, center, row)
        width 80%
        font-size 1.3rem
        margin-top 50px
        +above('sm')
          display none

      &__local
      &__social
        flex(center, center, col)
        text-align center

        h3
          margin-bottom 15px

        a
          margin-top 15px

      &__local
        +above('sm')
          flex(center, left, col)
          text-align left

      &__social
        +above('sm')
          flex(center, right, col)
          text-align right


      &--copyright
        flex(center, center, col)
        text-align center
        padding-top 15px
        margin-bottom 35px
        border-top 1px #ececec solid
        +above('lg')
          flex(between, center, row)

        span
          margin-top 15px
