//
// Footer
//
// ==================================================

.footer
  width 100%
  height auto
  flex(center, center, col)

  p
    font-size 1.5em
    letter-spacing -0.02em
    line-height normal

  span
    font-weight 300
    font-size .85em

  &__container
    width $widthContainer

    &__row
      width 100%
      margin-top 30px
      margin-bottom 30px
      box-sizing border-box
      flex(between, center, row)
      +above('sm')
        margin-top 50px

      &__local
        +below('xs')
          width 100%
          text-align center

      &__social
        flex(center, right, col)
        text-align right
        hidden('xs')

      &__local
      &__social
        h3
          margin-bottom 15px

        a
          margin-top 15px

      &--copyright
        flex(center, center, col)
        text-align center
        padding-top 15px
        margin-bottom 35px
        border-top 1px #ececec solid
        +above('sm')
          flex(between, center, row)
          margin-top 90px

        span
          margin-top 15px
          +above('sm')
            margin-top 0
