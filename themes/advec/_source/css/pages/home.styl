.section

  // Swipper
  &__swipper
    height 100vh !important
    color $white
    text-align center
    display flex
    overflow hidden

    &__container
      width 100%
      max-width 100%

      .swiper-container
        width 100%
        height 100vh

        .swiper-button-prev
          left 0
        .swiper-button-next
          right 0
        .swiper-button-prev,
        .swiper-button-next
          display flex
          justify-content center
          align-items center
          background-color rgba(0,0,0,1)
          opacity .4
          width 52px
          height 52px
          background-image none
          transition all .4s ease-in-out
          +below('xs')
            hidden('xs')

          &:hover
            opacity .8

        .swiper-slide
          display flex
          flex-flow column
          justify-content center
          align-items center
          background-size cover
          background-repeat no-repeat
          background-position center center

        .inner-wrap__block
          display flex
          justify-content center
          align-items center
          flex-flow column
          max-width 80%
          height 100vh
          z-index 1

          .block__title,
          .block__button
            padding-top 1.5em
            padding-bottom 1.5em

          .block__text
            width 70%

          .block_button
            .button__row
              justify-content center

              &:nth_child(1)
                margin-right 15px

          .section__video
            position absolute
            z-index -9999
            height 100vh
            overflow hidden
            top 0
            left 0
            right 0
            bottom 0

            video
              width auto
              min-width 100%
              min-height 100%

  &--servico-social
    background-image url('../assets/images/servico.png')
  &--batismo
    background-image url('/assets/images/batizado.png')
  &--departamentos
    background-image url('../assets/images/voluntario.png')
  &--oracao
    background-color $white
    color $gray-darker !important
    height 20vh
    padding-top 8em
