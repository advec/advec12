//
// Typography
//
// ==================================================

// Font Face
// --------------------------------------------------

@font-face
  font-family "Gotham"
  font-style normal
  font-weight 300
  src url("/assets/fonts/Gotham-Light.eot") format("eot"),
      url("/assets/fonts/Gotham-Light.ttf") format("ttf"),
      url("/assets/fonts/Gotham-Light.woff") format("woff")

@font-face
   font-family "Gotham"
   font-style normal
   font-weight 500
   src url("/assets/fonts/GothamMedium.eot") format("eot"),
       url("/assets/fonts/GothamMedium.ttf") format("ttf"),
       url("/assets/fonts/GothamMedium.woff") format("woff")

@font-face
  font-family "Gotham"
  font-style normal
  font-weight bold
  src url("/assets/fonts/Gotham-Bold.eot") format("eot"),
      url("/assets/fonts/Gotham-Bold.ttf") format("ttf"),
      url("/assets/fonts/Gotham-Bold.woff") format("woff")

// Font Family
// --------------------------------------------------

font-family(family)
  if (family == gotham)
    font-family 'Gotham', Georgia, Cambria,"Times New Roman", Times, serif

// Transform
// --------------------------------------------------

font-transform(transform)
  if (transform == uppercase)
    text-transform uppercase
    letter-spacing .1rem

  if (transform == lowercase)
    text-transform lowercase
    letter-spacing .1rem


// Uppercase
// --------------------------------------------------

font-weight(arg = '')
  if (arg == bold)
    font-weight bold

  if (arg == medium)
    font-weight 500

  if (arg == light)
    font-weight 300


// Fonts
// --------------------------------------------------

font(type = '', weight = '', family = '', transform = '')

  // Type
  // --------------------------------------------------

  if (type)

    // Headings
    // --------------------------------------------------

    if (type == h1)
      font-size 4.5rem
      line-height 5.5rem
      letter-spacing -.02em

      +above('sm')
        font-size 6rem
        line-height 7rem

    if (type == h2)
      font-size 3.6rem
      line-height 5rem
      letter-spacing -.02em

    if (type == h3)
      font-size 2.8rem
      line-height 4rem
      letter-spacing -.02em

    if (type == h4)
      font-size 2.2rem
      line-height 3rem

    if (type == h5)
      font-size 1.8rem
      line-height 2.4rem

    if (type == h6)
      font-size 1.2rem
      line-height 1.8rem

    // Paragraphs
    // --------------------------------------------------

    if (type == p1)
      font-size $text-size
      line-height 3.5rem
      letter-spacing -.003em

    if (type == p2)
      font-size 1.6rem
      line-height 2.4rem



  // Weights
  // --------------------------------------------------

  if (weight)
    font-weight(weight)


  // Font Secondary
  // --------------------------------------------------

  if (family)
    font-family(family)


  // Transform
  // --------------------------------------------------

  if (transform)
    font-transform(transform)
