//
// Footer
//
// ==================================================

.footer
  display flex
  flex-flow column

  p
    font-size 1.5em
    letter-spacing -0.02em
    line-height normal

  span
    font-weight 300
    font-size .85em

  &__container
    container()
    margin-top 5em
    margin-bottom 5em

    &__row
      lost-flex-container row
      box-sizing border-box
      justify-content space-between
      +below('xs')
        display flex
        align-items center
        justify-content center

      &__local
        +below('xs')
          width 100%
          text-align center

      &__social
        display flex
        align-items right
        text-align right
        flex-direction column
        hidden('xs')

      &__local,
      &__social
        h3
          margin-bottom 15px

        a
          margin-top 15px

      &--copyright
        lost-flex-container row
        lost-column 1/1
        justify-content space-between
        padding-top 15px
        margin-top 5em
        border-top 1px #ececec solid
