//
// Base
//
// ==================================================

body
  margin 0
  padding 0
  color $text-color
  font-family('gotham')

  &.overflow--hidden
    /* when primary navigation is visible, the content in the background won't scroll */
    overflow hidden

h1, h2, h3, h4, h5, h6
  letter-spacing -0.02em
  margin 0
  line-height 0.9em
  font-weight bold
  padding 0

h1
  margin-top 0
  font-size $type-size-1

h2
  font-size $type-size-2

h3
  font-size $type-size-4

h4
  font-size $type-size-5

h5
  font-size $type-size-6

h6
  font-size $type-size-7

small, .small
  font-size $type-size-6


p
  font-size responsive
  font-weight 300
  letter-spacing .5px
  line-height 25px
  padding 0
  margin 0
  display block

/* reduce orphans and widows when printing */

p, pre, blockquote, ul, ol, dl, figure, table, fieldset
  orphans 3
  widows 3

/* links */

a
  color inherit
  text-decoration none
  transition .2s ease-in-out

  &hover,
  &active
    outline 0

/* horizontal rule */

hr
  display block
  opacity .1
  border 1px solid $gray-light


/* lists */

ul li,
ol li
  padding 0
  margin 0
  list-style none


li ul,
li ol
  padding 0
  margin 0
  list-style none
